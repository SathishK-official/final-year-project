# BRAMKA AI - Environment Variables
# Copy this to .env and fill in your actual values

# ============================================================================
# LLM API KEYS
# ============================================================================

# Groq API Key (Primary - FREE tier available)
# Get yours at: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Groq Model Selection
GROQ_MODEL=llama-3.1-70b-versatile

# Ollama Settings (Backup - Local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b

# ============================================================================
# DATABASE SETTINGS
# ============================================================================

# ChromaDB (Vector Database)
CHROMA_DB_PATH=./data/vector_db
CHROMA_COLLECTION_NAME=bramka_knowledge

# SQLite (Relational Database)
SQLITE_DB_PATH=./data/sqlite/bramka.db

# ============================================================================
# VOICE SETTINGS
# ============================================================================

# Voice Recognition
VOICE_ENABLED=true
VOICE_LANGUAGE=en-US
VOICE_TANGLISH_SUPPORT=true

# Text-to-Speech
TTS_ENABLED=true
TTS_VOICE=en-US-Neural2-A
TTS_SPEED=1.0

# ============================================================================
# LOGGING SETTINGS
# ============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
LOG_FILE_PATH=./data/logs/bramka.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# ============================================================================
# SECURITY SETTINGS
# ============================================================================

# API Security
API_HOST=127.0.0.1
API_PORT=8000
API_RELOAD=false

# Dashboard
DASHBOARD_HOST=127.0.0.1
DASHBOARD_PORT=8501

# ============================================================================
# ATTACK SETTINGS
# ============================================================================

# Reconnaissance
NMAP_DEFAULT_ARGS=-sV -T4
NMAP_TIMEOUT=300

# Exploitation
SQLMAP_DEFAULT_ARGS=--batch --random-agent
MAX_CONCURRENT_ATTACKS=3

# ============================================================================
# TOOL LEARNING SETTINGS
# ============================================================================

# Autonomous Tool Manager
AUTO_TOOL_DISCOVERY=true
AUTO_TOOL_INSTALLATION=true
TOOL_INSTALL_PATH=./data/downloads/tools
TOOL_SAFETY_CHECK=true

# GitHub Search
GITHUB_SEARCH_ENABLED=true
GITHUB_MIN_STARS=100

# ============================================================================
# INTELLIGENCE SETTINGS
# ============================================================================

# Memory & Learning
ATTACK_MEMORY_ENABLED=true
PATTERN_RECOGNITION_ENABLED=true
STRATEGY_EVOLUTION_ENABLED=true

# Success Rate Tracking
MIN_SUCCESS_RATE_THRESHOLD=0.3
LEARNING_RATE=0.1

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Debug Mode
DEBUG=false
VERBOSE_OUTPUT=false

# Development Features
AUTO_RELOAD=false
ENABLE_PROFILING=false

# ============================================================================
# ETHICAL USE AGREEMENT
# ============================================================================

# By using this tool, you agree to:
# 1. Use ONLY on authorized systems
# 2. Educational/research purposes only
# 3. Follow responsible disclosure
# 4. Comply with local laws
# 5. No malicious use

ETHICAL_USE_ACKNOWLEDGED=true
